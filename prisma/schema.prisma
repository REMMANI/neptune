// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dealer {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  domain      String?  @unique
  subdomain   String?  @unique
  status      DealerStatus @default(ACTIVE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  customizations DealerCustomization[]
  admin          DealerAdmin?

  @@map("dealers")
  @@index([domain])
  @@index([subdomain])
  @@index([slug])
}

model DealerAdmin {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String   // Hashed password
  dealerId  String   @unique  // Each dealer has one admin
  isActive  Boolean  @default(true)
  lastLogin DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  dealer   Dealer @relation(fields: [dealerId], references: [id], onDelete: Cascade)
  sessions DealerSession[]

  @@map("dealer_admins")
  @@index([email])
  @@index([dealerId])
}

model DealerSession {
  id        String   @id @default(cuid())
  adminId   String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  admin DealerAdmin @relation(fields: [adminId], references: [id], onDelete: Cascade)

  @@map("dealer_sessions")
  @@index([token])
  @@index([adminId])
  @@index([expiresAt])
}

model DealerCustomization {
  id         String   @id @default(cuid())
  dealerId   String
  templateId String   // Selected template
  sections   Json     // Array of sections with order and configuration
  settings   Json     // Global settings like colors, fonts, etc.
  status     CustomizationStatus
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  dealer Dealer @relation(fields: [dealerId], references: [id], onDelete: Cascade)

  @@map("dealer_customizations")
  @@index([dealerId, status])
  @@unique([dealerId, status]) // Only one draft and one published per dealer
}

model Template {
  id          String @id @default(cuid())
  name        String
  description String
  preview     String // Preview image URL
  sections    Json   // Default sections configuration
  settings    Json   // Default settings (colors, fonts, etc.)
  isActive    Boolean @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("templates")
}

enum DealerStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum CustomizationStatus {
  DRAFT
  PUBLISHED
}